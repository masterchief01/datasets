			var navLinks = $('#billboard_nav > a');
			var slides = $('#slides > div');
			navLinks.each(function(i, el){
				var el = $(el);
				var slideClass;
				switch(i) {
					case 0:
						slideClass = 'one';
						break;
					case 1:
						slideClass = 'two';
						break;
					case 2:
						slideClass = 'three';
						break;
					case 3:
						slideClass = 'four';
						break;
					default:
						slideClass = null;
				}
				el.click((function(slideClass){return function(e){
					e.target = $(e.target);
					if(!e.target.hasClass('selected')) {
						navLinks.removeClass('selected');
						e.target.addClass('selected');
						slides.css('display', 'none')
						slides.filter('.'+slideClass).css('display', 'block');
					}
					e.preventDefault();
				}})(slideClass));
			});
		});
	</script>

	
