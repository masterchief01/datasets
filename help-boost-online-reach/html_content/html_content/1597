<script type='text/javascript'>

$(function(){
	LoadingGif= new Image(128,15); 
	LoadingGif.src="/i/loading.gif"; 
	
});



var AnimateScrollId = 0;
function AnimateScrolling(NewPosition, ScrollId, Speed){
	//this makes sure we don't run two animations at the same time
	if(ScrollId != null){
		if(AnimateScrollId != ScrollId)
			return false;
	}
	else{
		AnimateScrollId++;
	}
	
	if(Speed == null)
		Speed = 5;
	
	CurrentPosition = $(window).scrollTop();
	
	if(NewPosition - CurrentPosition > -1*Speed && NewPosition - CurrentPosition < Speed){
		$(window).scrollTop(NewPosition);
		return true;
	}
	else if(NewPosition > CurrentPosition){
		$(window).scrollTop(CurrentPosition + Speed);
	}
	else{
		$(window).scrollTop(CurrentPosition - Speed);
	}
	
	setTimeout("AnimateScrolling("+NewPosition+", "+AnimateScrollId+", "+(Speed+5)+")");
}


$(document).ready(function(){
 $(window).scroll(function(){
  if($(window).scrollTop() > 750 ){
   $("#SharingBar").fadeIn("slow");
  } else {
   $('#SharingBar').fadeOut('slow');
  }
 });
})


</script>

