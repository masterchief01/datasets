function SubscribeViaEmail(){
	Dialog("<div id='SubscribeDiv'>"+$('#EmailSubscribeSource').html()+"</div>", 600);
}

function SubmitEmailSubscribe(){
	var ThisEmail = $('#SubscribeDiv').find('#Email').val();
	
	$('.SubscribeButton').hide();
	$('.SubscribeLoading').show();
	
	$.post('/ajax/emailsubscribe.php', {Email:ThisEmail}, function(data){
		if(data == 'FALSE'){
			$('.SubscribeLoading').hide();
			$('.SubscribeButton').show();
			
			alert("The email address you entered is invalid. Please check it to make sure you typed it correctly. Thanks!");
		}
		else{
			CloseDialog($('#SubscribeDiv'));
			DialogAlert("<h2>You've been subscribed!</h2>We'll email all new blog posts from now on. Thanks!", 400);
	
		}
	})
	
}
</script>

	
