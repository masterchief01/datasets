function SaveComment(Element){
	if($(Element).attr("ParentCommentId"))
		ThisParentCommentId = $(Element).attr("ParentCommentId");
	else
		ThisParentCommentId = "NULL";
	
	Element = $(Element).parent().parent().parent();
	
	var ThisName = $(Element).find("#Name").val();
	var ThisEmail = $(Element).find("#Email").val();
	var ThisWebsite = $(Element).find("#Website").val();
	var ThisComment = $(Element).find("#Comment").val();
	var ThisSubscribe = $(Element).find("#Subscribe").val();
	
	if(ThisName == ""){
		DialogAlert("Please enter your name");
	}
	else if(ThisEmail == ""){
		DialogAlert("Please enter your email address. This will not be shared with others, and we promise not to spam you.");
	}
	else if(!ValidateEmail(ThisEmail)){
		DialogAlert("The email address you entered is invalid. Please check it, and resubmit");
	}
	else if(ThisComment == ''){
		DialogAlert("Please enter a comment");
	}
	else{
		//Gray out the "Enter Note" section
		$(Element).append("<div class='CommentGrayOut'></div><div class='LoadingGif' style='position:absolute; left:222px; top:120px;' align='center'>Saving...<br /><br /><img src='/i/loading.gif' height='15' width='128' /></div>");
		$('.CommentGrayOut').width($(Element).width());
		$('.CommentGrayOut').height($(Element).height());
		
		$.post("/ajax/blog/savecomment.php", {Name:ThisName, Email:ThisEmail, Website:ThisWebsite,
				Comment:ThisComment, Subscribe:ThisSubscribe, BlogPostId:325,
				ParentCommentId:ThisParentCommentId, UserId:"NULL"}, function(data){
			$('.CommentGrayOut').hide();
			$('.LoadingGif').hide();
			$(Element).find("#Comment").val('');
			$('#CurrentComments').html(data);
			$('.NewComment').fadeIn(2000, function(){
				$('.NewComment').removeClass('NewComment');
			});
			
			BottomOffset = $('.NewComment').offset().top+400;
			AnimateScrolling(BottomOffset - $(window).height() + 25);
			
			clicky.log('#leave_comment', "Leave Comment");
		});
	}
}

function Reply(CommentId){
	$('#ReplyButton_'+CommentId).before("<div class='ReplyDiv' id='ReplyDiv_"+CommentId+"'><div style='float:right; padding:4px;'><a href='javascript://' onclick='HideReply("+CommentId+");'>Cancel this reply</a></div><div style='font-size:18px; font-weight:bold; color:#00809F;'>Enter your reply:</div><div style='position:relative;'>"+$('.CommentDiv').html()+"<input type='hidden' id='ParentCommentId' name='ParentCommentId' value='"+CommentId+"' /></div></div>");
	$('#ReplyButton_'+CommentId).hide();
	
	$('#Comment_'+CommentId).find("#SubmitComment").attr("ParentCommentId", CommentId);
}

function HideReply(CommentId){
	$("#ReplyDiv_"+CommentId).remove();
	$('#ReplyButton_'+CommentId).show();
}
</script>
	
