<script type="text/javascript">
	function relocate_ad(e)
	{
		if (document.getElementById("divtextads")) {
			document.getElementById("divtextads").style.left = (((GetWidth() - 960)/2) + 960) + "px";
		}
	}
	relocate_ad();
	window.onresize=relocate_ad;
	
if (leftcolumn) {
	if (leftcolumn.style.display == "none") {
		if (maincolumn) {
			if (maincolumn.display != "none") {
				if (parseInt(leftcolumn.clientHeight) < parseInt(maincolumn.clientHeight)) {
					document.all.leftcolumn.style.height = document.all.maincolumn.clientHeight;
				}
			}
		}
	}
}


</script>
