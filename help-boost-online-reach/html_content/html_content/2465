					function checkingForJQ(){

						function RdOGVote(task, post_id){
							var rdID = "." + post_id;
							window.post_id = $(rdID).attr('data-rd-post-id');
							window.task = task;
							var voteContainer = $(rdID).parents('.bottom-wrapper');
						      
				      window.rdVotingAjaxFunction = function(data){
	              var thePost = data.post;
	              if(data.percentage >= 50) {
	                $(".funny-or-not-" + post_id).html("Funny");
	                $("p[class*=face-]  img").attr({src: data['happy_src']});
	              } else {
	                $(".funny-or-not-" + post_id).html("Not Funny");
	                $("p[class*=face-]  img").attr({src: data['frawn_src']});
	              }
	              
	              // if voting period is set to once or not
	              if(data.voting_period == "once") {
	                $(".two-faces-" + post_id).remove();
	                if(task == "like") {
	                    $(".rating_faces-" + post_id).html("<img src='" + data.happy_src + "' /><div class='clear'> </div>");
	                    $(".perc-" + post_id).html(data.percentage);
	                } else {
	                    $(".rating_faces-" + post_id).html("<img src='" + data.frawn_src + "' /><div class='clear'> </div>");
	                    $(".perc-" + post_id).html(data.percentage);
	                }
	              } else {
	                  $("#lc-" + post_id).html(data.like);
	                  $("#unlc-" + post_id).html(data.unlike);
	                  $(".perc-" + post_id).html(data.percentage);
	              }
                $("#status-" + post_id).removeClass("loading-img").css({
                	'font-size': '10px',
                	'color': 'orange'
                }).empty().html(data.msg);
                $(".you-rate-wrapper .votetrigger input[type='checkbox']").prop('checked', '');
                window.location.reload(true);
				      };

