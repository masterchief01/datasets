	$(document).ready(function() {
		var u, t;
		$('.share .fb').live('click', function(e) {
			u=encodeURIComponent(location.href);
			t=encodeURIComponent(document.title);
			window.open('http://www.facebook.com/sharer.php?u='+encodeURIComponent(u)+'&amp;t='+encodeURIComponent(t),
			null,
			'sharer','toolbar=0,status=0,width=626,height=436');
			e.preventDefault();
			return false;		
		});
		$('.share .tw').live('click', function(e) {	
			u= 'http%3A%2F%2Fwww.rd.com%2Ffood%2Fwaiters-share-restaurant-stories%2F';
			t= '13 Things Your Waiter Wont Tell You'.replace(/["â€™']{1}/gi,"");
			window.open(
				'https://twitter.com/intent/tweet?related=readersdigest&url='+u+'&via=readersdigest&text='+ t +'&original_referer=' + u,
				null,
				'status=0,toolbar=0,width=626,height=436'
			);
			e.preventDefault();
			return false;		
		});
		$('.share .email').live('click', function(e) {
			u=location.href;
			t=document.title;
			var shareMessage = "Hi, I'd like to share this story from Reader's Digest (rd.com) with you."; 
			window.open("http://www.rd.com/wp-content/themes/readersdigest/lib/functions/email_share_ui.php?sharelink=" + u,
			null,
			'status=0,toolbar=0,width=626,height=436');
			e.preventDefault();
			return false;	
		});
	});
