										//console.log($(this).prop('checked'));
										$(this).removeAttr('checked');
										//console.log('this', this);	
									}else{
									 	//console.log($(this).prop('checked'));
									 	$(this).attr('checked', 'checked');
									 	//console.log('this', this);
									}

								});

								$('.facebook_voting_link').live('click', function(e){
									var container = $(this).parents('.fb-share');
									var theCheckbox = $('.facebook_voting_checkbox:visible', container);
									if($(theCheckbox).prop('checked') != false){
										$(theCheckbox).removeAttr('checked');
									}else{
									 	$(theCheckbox).attr('checked', 'checked');
									}
								});

								// respond to clicks on the login and logout links
								$('.auth-loginlink').live('click', function(e){
									e.preventDefault();
									FB.login(function(response) {
									  if (response.session) {
								        window.location.reload(true);
								      } else {
								        // user is not logged in
								      }
									 }, {scope: 'read_friendlists, publish_stream'});	

									 return false;							  
								});

								$('.auth-loginlinkauth').live('click', function(){
									e.preventDefault();
									FB.login(function(response) {
									  if (response.session) {
								        window.location.reload(true);
								      } else {
								        // user is not logged in
								      }
									 }, {scope: 'read_friendlists, publish_stream'});	

									 return false;								  
								});

								$('.auth-logoutlink').live('click', function(){
									e.preventDefault();
								  FB.logout();
								  return false;
								}); 	

								var fbAuthing = $('.fbauthing');
								var loggedIn = $('.auth-loggedin');
								var loggedInAuth = $('.auth-loggedinauth');
								var loggedOut = $('.auth-loggedout');

								if (fbset === '1') {
									$(fbAuthing).hide();
									$(loggedIn).fadeIn();
								} else if (fbset === '2') {
									$(fbAuthing).hide();
									$(loggedInAuth).fadeIn();									
								} else if (fbset === '3') {
									$(fbAuthing).hide();
									$(loggedOut).fadeIn();									
								} else {
									$(fbAuthing).hide();
									$(loggedOut).fadeIn();	
								}
							});
							clearTimeout(clock);
						} else {
							clock = setTimeout(checkingForJQ, 1000);
						}
					}
					checkingForJQ();
				})();
			};
		  		
			// Load the SDK Asynchronously
			(function(d){
				var js, id = 'facebook-jssdk', ref = d.getElementsByTagName('script')[0];
				if (d.getElementById(id)) {return;}
				js = d.createElement('script'); js.id = id; js.async = true;
				js.src = "//connect.facebook.net/en_US/all.js";
				ref.parentNode.insertBefore(js, ref);
				}(document));
				
				
        </script>
	<script type="text/javascript">
