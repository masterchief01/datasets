		<script>			
			
			window.fbset = 0;
	
			window.fbAsyncInit = function() {
			//console.log('FB', FB);					
				FB.init({
					appId      : '268759176572234', // App ID
					channelUrl : '//'+window.location.hostname+'/channel', // Channel File
					status     : true, // check login status
					cookie     : true, // enable cookies to allow the server to access the session
					xfbml      : true  // parse XFBML
								
				});
								
				// check state of login and app auth
			
				FB.getLoginStatus(function(response) {
					if (response.status === 'connected') {
						var uid = response.authResponse.userID;
						var accessToken = response.authResponse.accessToken;
						// alert ('FB: Logged In / Connected');
						fbset = '1';
						
					} else if (response.status === 'not_authorized') {
						// alert ('FB: Logged In / Not Connected');
						fbset = '2';
						
					} else {
						// alert ('FB: Not Logged In');
						fbset = '3';
											
					}
					
					// modify UI based on state of login and app auth
					runFbInitCriticalCode(response); 
					
				});									
			
			
				// listen for and handle auth.statusChange events
				FB.Event.subscribe('auth.statusChange', function(response) {
					
					var fbAuthing = $('.fbauthing');
					var loggedIn = $('.auth-loggedin');
					var loggedInAuth = $('.auth-loggedinauth');
					var loggedOut = $('.auth-loggedout');

					if (response.authResponse) {
						// user has auth'd your app and is logged into Facebook
						
						FB.api('/me', function(me){
							if (me.name) {
								$('.auth-displayname').html(me.name);
							}
						})

						$(fbAuthing).hide();
						$(loggedIn).fadeIn();
					} else {
						if (response.status === 'not_authorized') {
							$(fbAuthing).hide();
							$(loggedInAuth).fadeIn();
						} else {
							$(fbAuthing).hide();
							$(loggedOut).fadeIn();
						}
					}
				});
		  	
			};
			
			function runFbInitCriticalCode(response) {
				(function() {
