function openRelatedBuildWidget() {
	var widget = new Widget('open_related_widget', 'open_related', '/widget/service.html?widget=open_topic&search_keywords=food&number=3');
	var manager = new WidgetManager(widget);
	manager.getData(openRelatedRenderWidget);
}

function openRelatedRenderWidget(transport, json) {
	try {
		if (json.stories == null) {
			return;
		}
		var content = '';
		for (var i=0; i<json.stories.length; i++) {
			content += '<li class="clearfix">';
			content += '<h2 class="headline sm"><a href="http://open.salon.com' + json.stories[i].url + '">' + json.stories[i].picture + json.stories[i].title + '</a></h2>';
			content += '<span class="byline">' + json.stories[i].author_name + '</span>';
			content += '</li>';
		}

		$('open_topic_relateds').innerHTML = content;
	} catch (e) {

	}
}
openRelatedBuildWidget();
</script>

