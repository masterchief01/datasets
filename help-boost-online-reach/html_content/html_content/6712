	<script type="text/javascript">
	// Used for OLED Main Menu:
	

  var timeout    = 500;
  var closetimer = 0;
  var ommenuitem = 0;

	function omm_open()
	{ 
		omm_canceltimer();
		omm_close();
		ommenuitem = $(this).find('ul').css('visibility', 'visible');
	}
	
	function omm_close()
	{if(ommenuitem) ommenuitem.css('visibility', 'hidden');}
	
	function omm_timer()
	{  closetimer = window.setTimeout(omm_close, timeout);}
	
	function omm_canceltimer()
	{  if(closetimer)
	   {  window.clearTimeout(closetimer);
	      closetimer = null;}
    }
	
	$(document).ready(function()
	{  $('#oledMainMenu > li').bind('mouseover', omm_open)
	   $('#oledMainMenu > li').bind('mouseout',  omm_timer)
	});
	
	document.onclick = omm_close;
	</script>
	<script type="text/javascript"> </script>
	
	
	
	
	
