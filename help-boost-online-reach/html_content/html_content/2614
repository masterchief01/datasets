      <h1>Bite-sized New-York-style mini cheesecakes</h1>

      <div class="post-meta clearfix">	  
        <div class="post-author nophoto">
		
			By Rose Reisman		          		<span class="author-company">Rose Reisman’s Complete Light Kitchen (Whitecap Books) by Rose Reisman</span>
					        </div>
		<script language="javascript" type="text/javascript">
		var mec_share_url = "http://metronews.ca/food/575554/bite-sized-new-york-style-mini-cheesecakes/";
		var mec_share_title = "Bite-sized New-York-style mini cheesecakes".replace(/"/gi,"'");
		var mec_share_tw_channel = "metro" + MEC_City.toLowerCase();
		switch( mec_share_tw_channel  ) {
			case "metrohamilton":
			mec_share_tw_channel = "hamiltonmetro";
			break;
			case "metrolondon":
			mec_share_tw_channel = "themetrolondon";
			break;
			case "metrovancouver":
			mec_share_tw_channel = "vancouvermetro";
			break;
			case "metrokitchener":
			mec_share_tw_channel = "metroKW";
			break;
		}
		</script>
