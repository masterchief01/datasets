	  if( link_title.toLowerCase() == "local") {
	  	var link_href = jQuery(this).attr("href")+"";
		if(link_href.indexOf(MEC_City)<0){
			jQuery(this).attr("href",link_href+ "/" + MEC_City );	
		}
	  }
	  });
	  jQuery("#menu-secondary li a").each(function(idx){
	  	var link_title = jQuery(this).attr("title") + "";
		if( link_title.toLowerCase() == "print edition" ) {
			jQuery(this).parent().css("display","none");
		}
	  });
