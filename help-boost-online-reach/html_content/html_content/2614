	<script>
				
		function gex_createCookie(name, value, days) {
			var expires = '';
			if (days) {
				var date = new Date();
				date.setTime(date.getTime() + (days * 24 * 60 * 60 * 1000));
				expires = "; expires=" + date.toGMTString();
			} else { expires = ""; }
			document.cookie = name + "=" + value + expires +";path=/";
		}
		function gex_readCookie(name) {
			var nameEQ = name + "=";
			var ca = document.cookie.split(';');
			for (var i = 0; i < ca.length; i++) {
				var c = ca[i];
				while (c.charAt(0) == ' ') { c = c.substring(1, c.length); }
				if (c.indexOf(nameEQ) == 0) { return c.substring(nameEQ.length, c.length); }
			}
			return null;
		}
					
			var iphone  = (/iphone/i.test(navigator.userAgent.toLowerCase()));   		
			var osVersion = 0;		
			if (iphone)
			{
				var myUserAgent = navigator.userAgent.toLowerCase();
				osVersion = parseInt(myUserAgent.substr(myUserAgent.indexOf("cpu iphone os ")+14,1));				
			}						
			
			var android = (/android/i.test(navigator.userAgent.toLowerCase()));  
			var ipad  = (/ipad/i.test(navigator.userAgent.toLowerCase()));
			var isSafari  = (/safari/i.test(navigator.userAgent.toLowerCase()));
			
			var noPopup = true;
			  						  
			if (( android || ( (iphone || ipad) && isSafari ) )  ) {          	
				// first of all get the cookie to know if we should redirect
				var redirectCookie =  gex_readCookie("redirectmobile");
				if (redirectCookie == "dont" || redirectCookie== "" || redirectCookie== null) redirectCookie="0";
				
				
				var numberOfAttempts = redirectCookie.valueOf();
				
							
				if ( numberOfAttempts < 3 && redirectCookie != "dontgeo.metronews.ca" ){
					noPopup = false;
					numberOfAttempts++;
					//create the cookie to avoid redirecting again during this visit
					gex_createCookie( "redirectmobile", numberOfAttempts.toString() , 365 );
					gex_createCookie( "mec_rd_path", document.location.href + "", null );
					
					if (iphone) {
						var typeOfMobile = "iphone";
						var mobileLabel = "iPhone";
						var appStoreLink = "http://itunes.apple.com/ca/app/metro-news/id510467683?mt=8";
					} else if (android) {
						var typeOfMobile = "android";
						var mobileLabel = "Android Phone";
						var appStoreLink = "https://play.google.com/store/apps/details?id=ca.metronews.Metro";
					}

						if (iphone||android)
						{							
														
							var mobileBox=confirm("Metro has a FREE app, would you like to download it? Or you can press cancel and keep going to the site.");	
							if (mobileBox==true)
								{	
									//the user chose to get the app don't show the popup anymore
									gex_createCookie( "redirectmobile", "3", null );
									//send the user to the app store		
									_gaq.push(['_trackEvent', 'Download App', mobileLabel, 'Popup']);
									document.location = appStoreLink;   															   
								}
						}
						
						if (ipad) {
							var mobileBox=confirm("Metro has a FREE app, would you like to download it? Or you can press cancel and keep going to the site.");	
							if (mobileBox==true) {
									//send the user to the app store		
									_gaq.push(['_trackEvent', 'Download App', 'iPad', 'Popup']);
									document.location = "http://itunes.apple.com/ca/app/metro-news/id510467683?mt=8";   						   
								}	else {
									gex_createCookie( "redirectmobile", "3", null );
								}	
						}		
				}
				
																												  									
			}
			if(iphone && noPopup)
			{
				var showTheBubble = "1";
			}			   	
				
	
	</script>
	
	
	
	
