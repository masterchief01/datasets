<script type="text/javascript">
//<![CDATA[

    // This is the html that displays the first promo unit.
    var htmlForTheFirstPromo = '<a href="http://www.theatlantic.com/special-report/brave-thinkers-2011/" ' + 
	    						'   title="Brave Thinkers 2011" ' +
		    					'   name="&lid=Brave Thinkers 2011 Promo&lpos=Promo-Sidebar">' +
			    				'    <img src="http://cdn.theatlantic.com/static/front/images/specialreports/brave2011/promo.png" ' + 
				    			'         alt="Brave Thinkers 2011" />' +
					    		'</a>';

    // This is the html that displays the second promo unit.
    var htmlForTheSecondPromo = '<a href="http://www.theatlantic.com/special-report/start-up-nation/" ' + 
	    						'   title="Start-Up Nation" ' +
		    					'   name="&lid=Start-Up Nation Promo&lpos=Promo-Sidebar">' +
			    				'    <img src="http://cdn.theatlantic.com/static/front/images/specialreports/startup/promo.png" ' + 
				    			'         alt="Start-Up Nation" />' +
					    		'</a>';

    // This is the html that displays the third promo unit.
    var htmlForTheThirdPromo = '<a href="http://www.theatlantic.com/special-report/is-peace-possible/" ' + 
	    						'   title="Is Peace Possible?" ' +
		    					'   name="&lid=Is Peace Possible? Promo&lpos=Promo-Sidebar">' +
			    				'    <img src="http://cdn.theatlantic.com/static/front/images/specialreports/is-peace-possible/promo.png" ' + 
				    			'         alt="Is Peace Possible?" />' +
					    		'</a>';
						    
    // Let's get a random number, multiply it by the number of items we're rotating, then round it down.
	var randomPromo = Math.floor ( Math.random () * 3 );

    // If our random number is 0, display the first promo.
    // If it's 1, display the second promo.
	if ( randomPromo == 0 ) {
		document.write ( htmlForTheFirstPromo );
	} else if ( randomPromo == 1 ) { // randomPromo == 1
		document.write ( htmlForTheSecondPromo );
	} else { // randomPromo == 2
		document.write ( htmlForTheThirdPromo );
	} // end if randomPromo == 0
	
//]]>
</script>

</div>
