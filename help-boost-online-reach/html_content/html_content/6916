<script type="text/javascript">

//<![CDATA[

  function CheckPostcode() {
  	var ifaForm = document.getElementById('PCInput')
	var solicitorChecked = document.getElementById('FindASolicitor');
	if(solicitorChecked.checked == true ) {
		ifaForm.action = 'http://guardian.unbiased.co.uk/find-a-solicitor/'
	} else {
		ifaForm.action = 'http://www.unbiased.co.uk/gu/input.asp'
	}
	var pc = jQ("#IFApostcode").attr('value');
	if(pc.length<1) { 
		alert('You have not entered your postcode');
		return false;
	} else if ( pc.toUpperCase().match("[A-Z]{1,2}[0-9R][0-9A-Z]?[ ]?[0-9][A-Z]{2}") ) {
		return true;
	} else {
		alert(pc.toUpperCase() + ' is not a valid postcode');
		return false;
	}
}



//]]>

</script>

