/**
* Implementation of tracking for photos within an image gallery.
* @param {int} index the current index of the photo being viewed.
* @param {int} length the total number of photos within the active gallery
*/
function trackPhotoView(index, length) {
s.events = "event35";
var usePageView = false;
var linkName = "Photo gallery view";
s.prop1 = '';
s.eVar1 = '';
/* Check for initial photo view or every third photo view */
if (index == 0 || index % 3 == 0) {
s.events = s.apl(s.events, "event16", ",", 1);
linkName = "";
usePageView = true;
s.prop1 = index;
} else {
s.eVar1 = index;
}
/* Check for half-way point */
var half = Math.floor(length / 2) + 1;
if (index == (half-1)) {
s.events = s.apl(s.events, "event37", ",", 1);
linkName = "Half-way photo gallery view";
}
/* Check for complete */
if (index == (length-1)) {
s.events = s.apl(s.events, "event38", ",", 1);
linkName = "Completed photo gallery";
}
if (usePageView) {
s.t();
} else {
s.linkTrackVars = 'events,eVar1,prop1';
s.linkTrackEvents = s.events;
s.tl(this, 'o', linkName);
}
