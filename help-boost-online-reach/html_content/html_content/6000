			function leaveField(){
					input = document.getElementById("s")
					if (input.value == ""){
						input.value='search about balanced life'
					}
				}
			function clearField(){
					input = document.getElementById("s")
					if (input.value == "search about balanced life"){
						input.value = ""
					}
				}
