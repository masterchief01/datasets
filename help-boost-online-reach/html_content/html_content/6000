		var list = ['popular','categories','search'];
		function open_list_section(id){
				element = document.getElementById(id) 
				button = document.getElementById(id+"_button") 
				for each(list_id in list){
					if (list_id != id){
						document.getElementById(list_id).style.display="none";
						document.getElementById(list_id+"_button").className="inactive button"; 
					}
				}
				element.style.display="block"; 
				button.className="active button"; 
			}
	</script>
	
