						if (OAS_version >= 11) document.write('<SCR' + 'IPT LANGUAGE=JavaScript1.1 SRC="' + OAS_url + 'adstream_mjx.ads/' + OAS_sitepage + '/1' + OAS_rns + '@' + OAS_listpos + '?' + OAS_query + '"><\/SCRIPT>');

						function OAS_AD(pos) {
							if (OAS_version >= 11) OAS_RICH(pos);
							else OAS_NORMAL(pos);
						}
					
				//]]>
				</script>
				<!------ OAS SETUP end ------>
	
