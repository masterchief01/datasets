// <![CDATA[
function countername(t) {
    t = t.toLowerCase();
    t = t.replace(/(\s*[|:]+\s*)|(\s+-\s+)/g, ".");
    t = t.replace(/[|\s]+/g, "_");
    t = t.replace(/[^a-z0-9_.]/g, "");
    t = t.replace(/^_*(bbc)?_*\.?/, "");
    t = t.replace(/_+$/, "");
    t = t.replace(/(\.((front|home)_)?page)?(.page)?$/, ".page");
    t = t.replace(/^(news|sport|weather)_centre/, "$1");
    t = t.replace(/^on_this_day/, "news.on_this_day");
    return t;
}
function prod_name(c) {
    return c.replace(/^(.+?)\..*$/, "$1");
}
