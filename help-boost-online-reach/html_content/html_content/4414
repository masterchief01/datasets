		+ google_ads[i].line2 + ' ' + google_ads[i].line3 + '<br />' +
		'<a href="' + google_ads[i].url + '" ' + adUrl + '>' + google_ads[i].visible_url + '</a></div>';
	}
      
	s += "</div></div>";
	document.write(s);
	return;
}
	
google_ad_channel = '2748203808+7733764704+1640266093+5860073694+9503394424+9665908481+3607312525+8962074949+8941458308+7974857016+0674921071+7122150828' + xchannels + gchans;
