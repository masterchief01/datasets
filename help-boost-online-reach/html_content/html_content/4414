	Event.observe(window, 'load', checkIphone);
}
</script>

	<div id='img-box'></div>
  </body>  
<script type="text/javascript">
	(function ($) {
		$(window).load(function() {
			if ($('.twitter-share-button').length) {
				var node = document.createElement('script');
				node.type = 'text/javascript';
				node.src = 'http://platform.twitter.com/widgets.js';
				$('body').append(node);
			}
			if ($('.like_button').length) {
				$('.like_button').html('<iframe src="http://www.facebook.com/plugins/like.php?href=http%3A%2F%2Fwww.wikihow.com%2FMake-Old-Style-Macaroni-and-Cheese&locale=&layout=button_count&show_faces=false&width=150&action=like&font=arial&colorscheme=light" scrolling="no" frameborder="0" allowTransparency="true" style="border:none; overflow:hidden; width:83px; height:25px"></iframe>');
			}

			if ($('#fb_sidebar_content').length) {
				$('#fb_sidebar_content').html('<iframe src="http://www.facebook.com/plugins/like.php?href=http%3A%2F%2Fwww.facebook.com%2Fwikihow&amp;layout=standard&amp;show_faces=false&amp;width=215&amp;action=like&amp;colorscheme=light&amp;height=35" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:215px; height:40px;" allowTransparency="true"></iframe>');
			}
		});
	})(jQuery);
</script>

