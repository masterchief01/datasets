var _sf_async_config={uid:9250,domain:"slate.com"};
_sf_async_config.useCanonical = true;
if (wp_meta_data) {
    var sectionsArray = new Array();
    if (wp_meta_data.section !== undefined) {
        sectionsArray.push(wp_meta_data.section);
    }
    if (wp_meta_data.rubric !== undefined) {
        sectionsArray.push(wp_meta_data.rubric);
    }
    if (wp_meta_data.blog !== undefined) {
        sectionsArray.push(wp_meta_data.blog);
    }
    _sf_async_config.sections = sectionsArray.join(",");
    if (wp_meta_data.authors !== undefined) {
        _sf_async_config.authors = wp_meta_data.authors.join(",");
    }
}

(function(){
  function loadChartbeat() {
    window._sf_endpt=(new Date()).getTime();
    var e = document.createElement('script');
    e.setAttribute('language', 'javascript');
    e.setAttribute('type', 'text/javascript');
    e.setAttribute('src',
       (("https:" == document.location.protocol) ? "https://a248.e.akamai.net/chartbeat.download.akamai.com/102508/" : "http://static.chartbeat.com/") +
       "js/chartbeat.js");
    document.body.appendChild(e);
  }
  var oldonload = window.onload;
  window.onload = (typeof window.onload != 'function') ?
     loadChartbeat : function() { oldonload(); loadChartbeat(); };
})();
</script>
<!-- Top Nav Search Handler -->
<script type="text/javascript">
    (function(){
        var slSrchForm = $('.sl-nav-srch-form');
        slSrchForm.submit(function(){
            if($('.sl-nav-srch-field').attr('value') == ''){
                return false;
            }
        });
        $('.sl-nav-srch-opt-sl').click(function(){
            slSrchForm.attr('action', '/search.html');
            slSrchForm.submit();
        });
        $('.sl-nav-srch-opt-ms').click(function(){
            slSrchForm.attr('action', 'http://www.bing.com/search');
            slSrchForm.attr('target', '_blank');
            var input = $(document.createElement('input'));
            input.attr('name', 'FORM');
            input.attr('value', 'ESLATE');
            input.attr('type', 'hidden');
            slSrchForm.append(input);
            slSrchForm.submit();
        });
    })();

<!-- temp script for making sure section tap2s are height of entire top area -->
    $(document).ready(function(){
        if($('.sl-sect-tap2-cntr')){
            $('.sl-sect-tap2-cntr').height($('.section_tap2').height());
        }
    });

<!-- temp script for making sure the left rail never appears to wrap under the toc -->
    var sl = {}
    sl.setLeftRail = function(){
        if($('.homepage_leftrail').length){
            $('.sl-toc-lr-list').css('height', 'auto');
        }
        else{
            if($('.sl-toc-lr-list').height() < $('.sl-toc-cntr').height()){
                $('.sl-toc-lr-list').height($('.sl-toc-cntr').height() - $('.sl-toc-lr-head').height() - 15);
            }
        }
    }
    $(document).ready(function(){
        sl.setLeftRail();
    });
</script>

