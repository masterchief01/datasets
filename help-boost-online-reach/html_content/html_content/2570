					jQuery( function() {
						var subscriber = jQuery('#subscribeRect');
						// show plus instead of fb for g+ referrers
						if(SocialButtons.referrerDomain === 'plus.url.google.com'/* || location.hash === '#googleplus'*/) {
							subscriber.find('.interface li.googleplus').show();
							subscriber.find('.interface li.facebook').hide();
							subscriber
								.addClass('select_googleplus')
								.removeClass('select_facebook');
							SocialButtons.googleplusScript().then(function() {
								window.gapi.plus.go(subscriber.find('.panel.googleplus')[0]);
							});
						} else if ( SocialButtons.referrerDomain === 'www.stumbleupon.com' && subscriber.find('.panel.stumbleupon').length ) {
							subscriber.find('.interface li').hide();
							subscriber.find('.interface li.stumbleupon').show();
							subscriber
								.addClass('select_stumbleupon')
								.removeClass('select_facebook');
