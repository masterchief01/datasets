<script>
function setThreadView(view)
{
	var threadview = document.getElementById('treeviewcomments');
	var flatview = document.getElementById('listviewcomments');
	if(view=='thread')
	{
		 threadview.style.display='inline';
		 flatview.style.display='none';
	}
	else
	{
		threadview.style.display='none';
		flatview.style.display='inline';
	}
}

</script>

