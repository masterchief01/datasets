    <div class="inner">
        <div class="comment-header">
            <div class="asset-meta">
                <div class="user-pic">

    
        
    <a href=""><img src="http://www.peoplespharmacy.com/build/mt-static/images/default-userpic-90.jpg" 
        width="36" height="36" alt="user-pic" /></a>
        
    

