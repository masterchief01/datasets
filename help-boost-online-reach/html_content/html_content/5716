					GawkerClientside.pushWidget( 'newsletter_signup', jQuery('#newsletter_signup_sidebar').SimpleFormWidget( settings.widgets.simpleform.byselector['.newsletter_signup'].options ).data('SimpleFormWidget') );
					jQuery( function() {
						var subscriber = jQuery('#subscribeRect');
						// show plus instead of fb for g+ referrers
						if(SocialButtons.referrerDomain === 'plus.url.google.com'/* || location.hash === '#googleplus'*/) {
							subscriber.find('.interface li.googleplus').show();
							subscriber.find('.interface li.facebook').hide();
							subscriber
								.addClass('select_googleplus')
								.removeClass('select_facebook');
							SocialButtons.googleplusScript().then(function() {
								window.gapi.plus.go(subscriber.find('.panel.googleplus')[0]);
							});
						} else if ( SocialButtons.referrerDomain === 'www.stumbleupon.com' && subscriber.find('.interface li.stumbleupon').length ) {
							subscriber.find('.interface li').hide();
							subscriber.find('.interface li.stumbleupon').show();
							subscriber
								.addClass('select_stumbleupon')
								.removeClass('select_facebook');
						}
						// switcher
						jQuery('.interface li').click(function() {
							//google analytics event tracker
							_gaq.push(['_trackEvent', 'edit_marketing', this.className ]);
							subscriber
								.removeClass()
								.addClass('select_'+this.className);
							// lazy-load twitter
							if(this.className === 'twitter') {
								SocialButtons.twitterScript();
							}
						});
						jQuery('.panel.newsletter .signup .button').click(function(){
							_gaq.push(['_trackEvent', 'edit_marketing', 'newsletter_subscribe']);
						});
					});
				</script>
