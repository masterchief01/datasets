	/* <![CDATA[ */
	function nav(sel) {
	   if (sel.selectedIndex == -1) return;
	   var opt = sel.options[sel.selectedIndex];
	   if (opt && opt.value)
	      location.href = opt.value;
	}
	/* ]]> */
	</script>
