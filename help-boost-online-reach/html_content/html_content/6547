YAHOO.util.Event.addListener(window, 'load', function() {
	var content = document.getElementById('blogTitleImg');
   var image = document.createElement('img');

   YAHOO.util.Event.addListener(image, 'load', function() {
		YAHOO.util.Dom.removeClass('showImg','hide');
		YAHOO.util.Dom.addClass('showImg','show');
		content.appendChild(image);
    });

    YAHOO.util.Event.addListener(image, 'error' ,function() {
		YAHOO.util.Dom.removeClass('showCopy','hide');
		YAHOO.util.Dom.addClass('showCopy','show');
    });

    image.setAttribute(
        'src',
        '/includes/blogs/allblogs/000245/000245_navigation.jpg'
    );

});
