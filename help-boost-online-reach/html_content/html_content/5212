	  var jQ = jQuery.noConflict();

		

	  var tumblrGridnarrow = {
	    
	    init: function() {

	    	jQ('.tileBackground').error(function() {
	    		jQ(this).siblings('.fakefakecover').removeClass('fakefakecover').addClass('fakecover');
	    		jQ(this).remove();
	    	});

	    	jQ('div#tileholdernarrow div.tile').mouseenter(function(){
	    		var thisCover = jQ(this).children().children('.cover');
	    		thisCover.stop(true).fadeTo(100, 1);
	    	})

	    	jQ('div#tileholdernarrow div.tile').mouseleave(function(){
	    		var thisCover = jQ(this).children().children('.cover');
	    		if (!thisCover.hasClass('coverSolid')) {
	    			thisCover.stop(true).fadeTo(333, 0);
	    		}
	    	})

	    	jQ('.tileBackground').each(function(i, v) {
	    		jQ(v).attr('src', jQ(v).attr('alt'));
	    		jQ(v).attr('alt', '');
	    	});

	    	

	    }
	  }

		
    tumblrGridnarrow.init();
	 	
