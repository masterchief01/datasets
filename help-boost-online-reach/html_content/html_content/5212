jQ(document).ready(function(){
	// check jQuery UI hasn't been loaded in by a microapp. short-term fix.
	if (!jQuery.ui) {
	  	jQ.ajax({
	  		url: 'https://ajax.googleapis.com/ajax/libs/jqueryui/1.7.3/jquery-ui.js',
	  		type: 'GET',
