					OAS_query += 'qc=' + result.segments[i].id + '&';
                    justTheParameters += 'qc=' + result.segments[i].id + '&';
				}
                try {
                    localStorage.setItem('qcparams', justTheParameters);
                } catch(er) {
                    // Ignore
                }
			}
		</script>
