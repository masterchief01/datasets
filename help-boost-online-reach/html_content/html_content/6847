<script type="text/javascript">
//<![CDATA[

	if (!_CBC_MODULES.modules.cbc_ticker)	_CBC_MODULES.modules.cbc_ticker = {type:"js", fullpath:"/i/o/ticker/ticker.js", requires:['cbc_carousel','io-base', 'cbc_ticker_style']};
