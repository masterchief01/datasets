	YUI(_CBC_MODULES).use('cbc_ticker', function(Y, result) {
		
		var timezone = "EDT";
		if (timezone == "Eastern Daylight Time")
			timezone = "EDT";
		else if (timezone == "Eastern Standard Time")
			timezone = "EST";
		if (result.success){
			CBC.namespace("CBC.APP").spbreakingnewsticker = new CBC.APP.Ticker();
	  	var params = {
	  		parentId: 'sportsticker',
	  		instance: 'spbreakingnewsticker',
				screenReaderName: 'CBC Breaking News',
content: '/network/includes/ticker/data/sports.html',
				autoRotate: false,
				columnsCount: 12,
				interval: 7, 
				serverTime: '2012/09/01 02:38:05 '+timezone
	  	};
	  	Y.on("domready", function(){
	  		CBC.APP.spbreakingnewsticker.init(params,Y)
	  	});
	  	CBC.APP.Instances.add("spbreakingnewsticker",CBC.APP.spbreakingnewsticker);
		}
	});
