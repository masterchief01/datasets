	<script>
		function submitNewsletterSubscription(){
			var postData=$("#newsletterModuleForm").serialize();
			if(postData.indexOf("prodid")==-1){
				alert("Please Select at least one Newsletter");
				return false;
			}
			var requestOptions={
						url: '/newsletters/nl_module_processor',
						data: postData,
						success: function(data,textStatus){
								$("#newsletters").fadeOut("slow",function(){$(this).html(data).fadeIn("slow");
									})
							}
				};
			$.ajax(requestOptions)
		}	
		function handleSubForm() {
			if (isValidEmail($('#email').val())) {
				$.post("/newsletters/nl_module_processor",
					{
						email: $('#email').val(),
						subsource: $('#subsource').val(),
						prodid: $('#prodid').val(),
						submitted: $('#submitted').val(),
						caller: $('#caller').val()
					}, 
					function(data) { $(this).html(data); });
			} else {
				$('#message').html('Please check your email address and captcha text!');
			}
			return false;
		}
		function isValidEmail(str) {
			return (str.indexOf(".") > 2) && (str.indexOf("@") > 0);
		}
		function clearFld(pFld) {
			getObject(pFld).value = "";
			return false;
		}
	</script>
 


