        var hasError = false;
        var errorMsg = '';
        
        // set this here so that people who submit this form also get a cookie so splash wont show up again
        
        jQuery.cookie('altsocial_splash', Drupal.settings.altSocial.splash, { path: '/', expires: 1209600 }); 
        
        // validate email
        
        var emailReg = /^([\w-\.]+@([\w-]+\.)+[\w-]{2,4})?$/;
        var emailaddressVal = jQuery("#id_email").val();
        
        if(emailaddressVal == '') {
            errorMsg += 'Please enter your email address.\n';
            hasError = true;
        }
        
        else if(!emailReg.test(emailaddressVal)) {
            errorMsg += 'Please enter a valid email address.\n';
            hasError = true;
        }
 
        // validate zipcode
        
        var zipcodeVal = jQuery("#id_zip").val();
        
        if(zipcodeVal == '') {
            errorMsg += 'Please enter your zipcode.\n';
            hasError = true;
        }
 
        if(hasError == true) {
            alert( errorMsg );
            return false; 
        }
        
        

});


