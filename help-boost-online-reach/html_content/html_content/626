            <input id="user_active_subscriptions___announcements" name="user[active_subscriptions][__announcements]" type="checkbox" value="3"   />
            <label for='user_active_subscriptions___announcements'>Announcements</label>
          </li>
                  </ul>
      </div>
    </form>
  </div>
  <script type='text/javascript'>
    //<![CDATA[
      (function($) {
        $("#newsletter_subscribe ul.expanded").hide();
        var f = function() { $("#newsletter_subscribe ul.expanded").show('fast'); }
        $("#newsletter_subscribe input").focus(f).change(f);
      })(window.jQuery);
    //]]>
  </script>
