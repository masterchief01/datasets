        var singupdefaulttext = '';
        $(function () {

            var limit = $("ul.ad-thumb-list li").length;
            if (limit <= 6) {
                var galleries = $('.ad-gallery').adGallery({ effect: 'fade', display_next_and_prev: false });
            }
            else {

                var galleries = $('.ad-gallery').adGallery({ effect: 'fade', display_next_and_prev: true });
