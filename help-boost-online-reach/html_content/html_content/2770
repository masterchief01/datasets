    function allCookies() {
        var index;
        var ARRcookies = document.cookie.split(";");
        for (index = 0; index < ARRcookies.length; index++) {
            CookieName = ARRcookies[index].substr(0, ARRcookies[index].indexOf("="));
            CookieValue = ARRcookies[index].substr(ARRcookies[index].indexOf("=") + 1);
            if (CookieName == " HMS_LOCALE") {
                return CookieValue;
            }
        }

    }

    function setCookie() {
        var c_name = "UserEmail";
        var exdate = new Date();
        value = $(".module").find(".signUp").find("input[type=text]").val();
        if (value == singupdefaulttext)
            value = "";

        if (value == null)
            var exdays = 0;
        else
            var exdays = 1;
        exdate.setDate(exdate.getDate() + exdays);
        var c_value = escape(value) + ((exdays == null) ? "" : "; expires=" + exdate.toUTCString());
        var cookie_string = escape(c_name) + "=" + c_value + "; path=/";
        document.cookie = cookie_string;
        CookieValue = allCookies();
        if(CookieValue !=null)
            window.location = "/" + CookieValue + "/Pages/secureregistration.aspx";
    }
   

    </script>
