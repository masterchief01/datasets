    function pageLoadScriptSignupLogin() {
    
        if (document.getElementById("SignUpLogin1_loginStatus")) {
    
            $('#btnListloginBlock').hide();
//            $('#loggedInBlock').show();
        }
        else {
            
            $('#btnListloginBlock').show();
//            $('#loggedInBlock').css("visibility", "hidden");
            document.cookie = "Refreshdone=" + escape(0);
        }
    }

    
