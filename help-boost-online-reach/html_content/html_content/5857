    <table border="0" cellspacing="0" cellpadding="0" width="728" align="center">
        <tr>
            <td colspan="3"><img src="articleImage.php?ArticleID=482&amp;ImageNumber=1" width="728" style="vertical-align: bottom;" /></td>
