function searchItem( val ) {
$('#menu_popup').hide();
var querySplit = val.split(",");
if( querySplit.length > 1 ) {
window.location.href='http://www.theglobeandmail.com/globe-investor/search/?q=' + encodeURIComponent(val);
} else {
$('#news_search_masthead').val( val );
$('#searchForm_gam_masthead').submit();
}
}
$('#news_search_masthead').keyup(debounce(function(e) {
if (e.keyCode > 47 && e.keyCode < 106) { // Limit ajax calls to alpha-numeric chars
var query = $('#news_search_masthead').val();
var querySplit = query.split(",");
if( query == '' ) { // Query is empty ignore
$('#menu_popup').hide();
} else { // Query Contains something move formward
if( querySplit.length > 1 ) { // Remove " " and force uppercase
query = query.replace(" ","");
query = query.toUpperCase();
$('#news_search_masthead').val( query ).css( 'text-transform', 'uppercase' );
} else {
query = query.toLowerCase();
$('#news_search_masthead').val( query ).css( 'text-transform', 'none' );
}
query = encodeURIComponent(query);
$.get('http://www.theglobeandmail.com/template/ajax/search/livesuggest.jsp?q='+query+'&news=10&stocks=3&keywords=0&authors=0&sections=0&inputID=news_search_masthead&listID=menu_popup&formID=searchForm_gam_masthead', function(data){ // Search Content via live suggest
if( data != '' ) {
$('#menu_popup').html( data ).show();
} else {
$('#menu_popup').hide();
}
});
}
} else if (e.keyCode == 13) { // Enter key, fire search page when we have search term
var query = $('#news_search_masthead').val();
searchItem(query);
} else {
/*
var $results = $('#menu_popup dd');
var $current = $results.filter('.selected'), $next;
switch (e.keyCode) {
case 38: // Up
$next = $current.prev();
if ($next.length == '0') {
$results.last().addClass('selected');
$results.first().removeClass('selected');
}
break;
case 40: // Down
if (!$results.hasClass('selected')) {
$results.first().addClass('selected');
}
$next = $current.next();
//dump($next);
if ($next.length == '0') {
$results.last().removeClass('selected');
$results.first().addClass('selected');
}
break;
case 13: // Enter
if ($results.hasClass('selected')) {
location.href = $current.find('a').attr('href');
return false;
}
break;
}
if ($next.is('dt') || $next.is('span')) { //only check next element if up and down key pressed
if (e.keyCode == 40) $next = $next.next('dd');
else if (e.keyCode == 38) $next = $next.prev('dd');
}
if ($next.is('dd')) {
$current.removeClass('selected');
$next.addClass('selected');
}
if (e.keyCode === 38) { //set cursor position
return false;
}
*/
return;
}
},550,false));
$('#news_search_masthead').bind('keydown keypress', function(e) {
if (e.keyCode == 38 || e.keyCode == 40) {
e.preventDefault();
}
});
function initSiteSearch() {
var query = $('#news_search_masthead').val();
var querySplit = query.split(",");
if( querySplit.length > 1 ) {
window.location.href='http://www.theglobeandmail.com/globe-investor/search/?q=' + encodeURIComponent(query);
} else {
$('#searchForm_gam_masthead').submit();
}
}
function addSymbolToSearch( symbol ) {
var inputField = $('#news_search_masthead').val();
// split value
inputField = inputField.split(' ').join('');
var inputSplit = inputField.split(",");
var inputLength = inputSplit.length;
var newInput = "";
for( i = 0; i < inputLength - 1; i++ ) {
newInput = newInput + inputSplit[i] + ", ";
}
newInput = newInput + symbol + ", ";
$('#news_search_masthead').val( newInput ).focus();
}
