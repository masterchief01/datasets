<script>
var OmnitureIETracking = {};
OmnitureIETracking.trackMSIEBar = function (clickType) {
var oldTrackVars = s.linkTrackVars,
oldTrackEvents = s.linkTrackEvents,
delay = clickType.indexOf("Impression") >= 0 ? true : this;
s.linkTrackVars = "None";
s.linkTrackEvents = "None";
s.tl(delay, 'o', 'MSIE Bar - ' + clickType);
s.linkTrackVars = oldTrackVars;
s.linkTrackEvents = oldTrackEvents;
};
// isPinned()
// Checks if the website was opened from a pinned task bar shortcut (IE9+ on Windows 7+ OS only)
// Return - true if opened from a pinned task bar shortcut. False if not on IE9+ on a Windows 7+ OS or not pinned.
OmnitureIETracking.isPinned = function () {
return ('external' in window && 'msIsSiteMode' in window.external && window.external.msIsSiteMode());
};
// isPinnedFirstRun (keepState)
// Checks if this session is the first time the website has been viewed from a pinned task bar shortcut. (IE9+ on Windows 7+ OS only)
// Attributes:
// keepState (boolean) - If false, the first run state will be removed and future calls will return false. No change if not in first run state.
// Return - true if in first run after pinned state. False if not on IE9+ on a Windows 7+ OS or not pinned or this isn't the first run after being pinned.
OmnitureIETracking.isPinnedFirstRun = function (keepState) {
return ('external' in window && 'msIsSiteMode' in window.external && 'msIsSiteModeFirstRun' in window.external && window.external.msIsSiteMode() && window.external.msIsSiteModeFirstRun(keepState) > 0);
};
</script>
