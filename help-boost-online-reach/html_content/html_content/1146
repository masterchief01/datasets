var mouse_is_inside_sNews_masthead = false;
$(document).ready(function() {
$('#sNews_masthead').hover(function(){
mouse_is_inside_sNews_masthead = true;
}, function(){
mouse_is_inside_sNews_masthead = false;
});
$("body").mouseup(function(){
if(! mouse_is_inside_sNews_masthead) $('#menu_popup').hide();
});
