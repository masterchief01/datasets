$current.removeClass('selected');
$next.addClass('selected');
}
if (e.keyCode === 38) { //set cursor position
return false;
}
*/
return;
}
},550,false));
$('#news_search_masthead').bind('keydown keypress', function(e) {
if (e.keyCode == 38 || e.keyCode == 40) {
e.preventDefault();
}
});
function initSiteSearch() {
var query = $('#news_search_masthead').val();
var querySplit = query.split(",");
if( querySplit.length > 1 ) {
window.location.href='http://www.theglobeandmail.com/globe-investor/search/?q=' + encodeURIComponent(query);
} else {
$('#searchForm_gam_masthead').submit();
}
}
function addSymbolToSearch( symbol ) {
var inputField = $('#news_search_masthead').val();
// split value
inputField = inputField.split(' ').join('');
var inputSplit = inputField.split(",");
var inputLength = inputSplit.length;
var newInput = "";
for( i = 0; i < inputLength - 1; i++ ) {
newInput = newInput + inputSplit[i] + ", ";
}
newInput = newInput + symbol + ", ";
$('#news_search_masthead').val( newInput ).focus();
}
