function getIEVersionNumber() {
    var ua = navigator.userAgent;
    var MSIEOffset = ua.indexOf("MSIE ");
    if (MSIEOffset == -1) {
        return 0;
    } else {
        return parseFloat(ua.substring(MSIEOffset + 5, ua.indexOf(";", MSIEOffset)));
    }
}
function reloadAd(sldcounter)
{
	if((getIEVersionNumber() < 6) && (navigator.userAgent.indexOf("MSIE") != -1))
	{
		metriccall_img(sldcounter);
		return false;
	}
	if(document.getElementById("frame_ad_BOX02"))
	{
		document.getElementById("frame_ad_BOX02").src = document.getElementById("frame_ad_BOX02").src;
	}
	if(document.getElementById("frame_ad_BOX01"))
	{
		if(msgid == "movies")
		{
			document.getElementById("frame_ad_BOX01").src = "http://imworld.rediff.com/worldrediff/pix/rightAdmovies.html?http%3A%2F%2Fwww.rediff.com%2Fgetahead%2Fslide-show%2Fslide-show-1-health-world-aids-day-10-tips-for-using-a-condom%2F20111201.htm";
		}
		else if(msgid == "sports" || msgid == "cricket")
		{
			document.getElementById("frame_ad_BOX01").src = "http://imworld.rediff.com/worldrediff/pix/rightAdsports.html?http%3A%2F%2Fwww.rediff.com%2Fgetahead%2Fslide-show%2Fslide-show-1-health-world-aids-day-10-tips-for-using-a-condom%2F20111201.htm";
		}
		else if(msgid == "money")
		{
			document.getElementById("frame_ad_BOX01").src = "http://imworld.rediff.com/worldrediff/pix/rightAdmoney.html?http%3A%2F%2Fwww.rediff.com%2Fgetahead%2Fslide-show%2Fslide-show-1-health-world-aids-day-10-tips-for-using-a-condom%2F20111201.htm";
		}
		else if(msgid == "getahead")
		{
			document.getElementById("frame_ad_BOX01").src = "http://imworld.rediff.com/worldrediff/pix/rightAdgetahead.html?http%3A%2F%2Fwww.rediff.com%2Fgetahead%2Fslide-show%2Fslide-show-1-health-world-aids-day-10-tips-for-using-a-condom%2F20111201.htm";
		}
		else
		{
			document.getElementById("frame_ad_BOX01").src = "http://imworld.rediff.com/worldrediff/pix/rightAdnews.html?http%3A%2F%2Fwww.rediff.com%2Fgetahead%2Fslide-show%2Fslide-show-1-health-world-aids-day-10-tips-for-using-a-condom%2F20111201.htm";
		}
		if(document.getElementById("world_right1"))hideDiv("world_right1");
		if(document.getElementById("frame_ad_BOX01"))showDiv("frame_ad_BOX01");
	}
	if(document.getElementById("frame_ad_LB01"))
	{
		if(msgid == "movies")
		{
			document.getElementById("frame_ad_LB01").src = "http://imworld.rediff.com/worldrediff/pix/topAdmovies.html?http%3A%2F%2Fwww.rediff.com%2Fgetahead%2Fslide-show%2Fslide-show-1-health-world-aids-day-10-tips-for-using-a-condom%2F20111201.htm";
		}
		else if(msgid == "sports"  || msgid == "cricket" )
		{
			document.getElementById("frame_ad_LB01").src = "http://imworld.rediff.com/worldrediff/pix/topAdsports.html?http%3A%2F%2Fwww.rediff.com%2Fgetahead%2Fslide-show%2Fslide-show-1-health-world-aids-day-10-tips-for-using-a-condom%2F20111201.htm";
		}
		else if(msgid == "money")
		{
			document.getElementById("frame_ad_LB01").src = "http://imworld.rediff.com/worldrediff/pix/topAdmoney.html?http%3A%2F%2Fwww.rediff.com%2Fgetahead%2Fslide-show%2Fslide-show-1-health-world-aids-day-10-tips-for-using-a-condom%2F20111201.htm";
		}
		else if(msgid == "getahead")
		{
			document.getElementById("frame_ad_LB01").src = "http://imworld.rediff.com/worldrediff/pix/topAdgetahead.html?http%3A%2F%2Fwww.rediff.com%2Fgetahead%2Fslide-show%2Fslide-show-1-health-world-aids-day-10-tips-for-using-a-condom%2F20111201.htm";
		}
		else
		{
			document.getElementById("frame_ad_LB01").src = "http://imworld.rediff.com/worldrediff/pix/topAdnews.html?http%3A%2F%2Fwww.rediff.com%2Fgetahead%2Fslide-show%2Fslide-show-1-health-world-aids-day-10-tips-for-using-a-condom%2F20111201.htm";
  		}	
		if(document.getElementById("world_top"))hideDiv("world_top");
		if(document.getElementById("frame_ad_LB01"))showDiv("frame_ad_LB01");
	}
	if(document.getElementById("div_belowAd"))
	{
		document.getElementById("div_belowAd").style.paddingTop = "10px" ;
	}
	metriccall_img(sldcounter);
}
function getDocHeight(){var doc = document;return Math.max(Math.max(doc.body.scrollHeight, doc.documentElement.scrollHeight),
Math.max(doc.body.offsetHeight, doc.documentElement.offsetHeight),Math.max(doc.body.clientHeight, doc.documentElement.clientHeight)
);}

document.getElementById('div_dispalyslide').innerHTML = document.getElementById('slide_0').innerHTML ;

function showMostTab(n,tabnm,dvnm)
{
	for(i=1;i<=4;i++)
	{
		if(i==n)
		{
			if(document.getElementById(dvnm+i))document.getElementById(dvnm+i).style.display = 'block' ;
			if(document.getElementById(tabnm+i))document.getElementById(tabnm+i).className = 'mosttabsel' ;
		}
		else
		{
			if(document.getElementById(dvnm+i))document.getElementById(dvnm+i).style.display='none';		
			if(document.getElementById(tabnm+i))document.getElementById(tabnm+i).className = 'mosttabnormal' ;
		}
	}
}

function showShareIframe(arti_title,arti_url,msgid,service)
{
	var data ="";
	var iframeurl = "http://share.rediff.com/pattern/friends?title="+escape(arti_title)+"&topic=&inviteurl="+arti_url+"&msgid="+msgid+"&inviteservice="+service+"&var=lightbox&grabber=1";
	data += "<div id=shareframeloadmsg style='margin:120px 0 0 250px;font-family:arial;font-size:16px; position:absolute;'><img src="+imgpath+"/waitimg.gif /> <b>Loading! Please wait...</b></div>";
	data += "<div style='padding: 5px 5px 0pt; width: 740px; text-align: right;'><div title=Close style='border: 1px solid #7899BB; background:#ffffff;float:right;color:#7899BB;cursor:pointer;cursor:hand;font-family: arial; font-size: 12px;height:15px;margin-right:10px;display:inline;' onclick=\"javascript:hideDiv('ieiframe');hideDiv('trans_div');hideDiv('div_shareframe');hideDiv('div_popupcontainer');\"><b>&nbsp;X&nbsp;</b></div></div>" ;
	data += "<iframe id=shareThisLightBoxIframe height=420 frameborder=0 width=740 scrolling=auto src=\"about:blank\" onload=\"document.getElementById('shareframeloadmsg').innerHTML='';\" ></iframe>"	;
	document.getElementById('div_shareframe').innerHTML = 	data ;
	var scrolltop = parseInt(document.body.scrollTop) ;
	var toppos = scrolltop-200 ;
	document.getElementById('div_shareframe').style.top = toppos+'px' ;
	document.getElementById('shareThisLightBoxIframe').src = iframeurl ;
	document.getElementById('trans_div').style.height = getDocHeight()+'px' ;
	showDiv('ieiframe');
	showDiv('trans_div');
	showDiv('div_popupcontainer');
	showDiv('div_shareframe');
}

