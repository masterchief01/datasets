<script type="text/javascript">
var Popular = {
	toggle: function(which) {
		if('popular' == which) {
			jQuery('#most-commented, #widget-popular-commented').removeClass('active');
			jQuery('#most-viewed, #widget-popular-popular').addClass('active');
		} else {
			jQuery('#most-viewed, #widget-popular-popular').removeClass('active');			
			jQuery('#most-commented, #widget-popular-commented').addClass('active');
		}
	}
}
</script>


<script type="text/javascript">
jQuery('#search input').focus(function() {
	jQuery('#search').addClass('active');
});
jQuery('#search input').blur(function() {
	jQuery('#search').removeClass('active');
});
</script>


<script type="text/javascript">
	jQuery(document).ready(function() {
		ich_idle_plugin_secs = 0;
		ich_idle_plugin_increment = function() {
			ich_idle_plugin_secs++;
			if(ich_idle_plugin_secs > 60*20) {
				window.location.reload();
			}
		}
		var ich_idle_plugin_interval = setInterval("ich_idle_plugin_increment()", 1000);
		jQuery(this).mousemove(function(e){
			ich_idle_plugin_secs = 0;
		});
		jQuery(this).keyup(function(e){
			ich_idle_plugin_secs = 0;
		});
	})
</script>



