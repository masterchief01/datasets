<script type="text/javascript">

	
	var mobileChecker =
	{
		maxScreenWidth : 2000,

		replaceSearch  : 'http://www',
		replaceValue   : 'http://m',

		showReturnBtn   : false,
		isPocketDevice  : navigator.userAgent.match(/(iPhone|iPod|BlackBerry|IEMobile|Windows Phone|Symbian|Windows CE|htc_flyer|Googlebot-Mobile)/),
		isAndroidMobile : navigator.userAgent.match(/(Android)/),
		hasMobileString : navigator.userAgent.match(/(Mobile|Mobi)/),
		redirect        : function()
		                 {
		                 	if( !this.isDisabled() )
		                 	{
			                 	var redirectTarget = document.URL.replace( this.replaceSearch, this.replaceValue );
			                 	
			                 	if( redirectTarget != document.URL )
			                 	{
				                 	window.location = redirectTarget;
				             	}
		                     }
		                     else
		                     {
		                     	this.showReturnBtn = true;
		                     }
		                 },
		run            : function()
		                 {
							if( this.isPocketDevice )
							{
								this.redirect();
							}
							
							if( this.isAndroidMobile && this.hasMobileString )
							{
								this.redirect();
							}
		                 },
		isDisabled      : function()
		                  {
							var i,x,y,ARRcookies=document.cookie.split(';');
							for (i=0;i<ARRcookies.length;i++)
							{
							  x=ARRcookies[i].substr(0,ARRcookies[i].indexOf("="));
							  y=ARRcookies[i].substr(ARRcookies[i].indexOf("=")+1);
							  x=x.replace(/^\s+|\s+$/g,"");
							  if( x == 'DsblMblRdrct' )
							    {
							      return true;
							    }
							  }
							  
							  return false;
		                  }
	};

	mobileChecker.run();
	

</script>
