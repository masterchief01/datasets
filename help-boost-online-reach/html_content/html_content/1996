<script type="text/javascript">
	function showblock()	{
		jQuery('#sign-in-popup').toggle();
		jQuery('#sign-in-popup-body').toggle();
	}

	function validateInputForm() {
		if (document.getElementById('fast_email').value == 'Email') {
			document.getElementById('fast_email').value ='';
		}
		if (document.getElementById('fauxPassword').value == 'Password') {
			document.getElementById('fauxPassword').value ='';
		}
	}


	function onFocusHandler(fld){
		fld.style.display = 'none';
		var fld2 = (document.getElementById) ? document.getElementById('password') : document.all['password'];
		fld2.style.display = 'block';
		fld2.focus();
		return true;
	}
	function onBlurHandler(fld){
		if(fld.value === ''){
			fld.style.display = 'none';
			var fld2 = (document.getElementById) ? document.getElementById('fauxPassword') : document.all['fauxPassword'];
			fld2.style.display = 'block';
		}
		return true;
	}
	
	jQuery('#fast_email').clearField({ blurClass: 'blurred', activeClass: 'active' });

    jQuery("#fast-login-form").keypress(function(e){
        if (e.which == 13 && jQuery.browser.msie == true)
        {
            jQuery("#fast-login-form").submit();
        }
    });

</script>                        </div>
