		function setCookie(c_name,value)	{

			var exdate=new Date ();
			if (value == "yes")
				exdate.setTime(exdate.getTime() + (24 * 60 * 60 * 1000*365));
			else
				exdate.setTime(exdate.getTime()-1000);
			document.cookie=(c_name+ "=" +escape(value)+ "; expires="+exdate.toGMTString());
		}

		</script>
