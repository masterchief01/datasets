	function setElements()
	{
		$(".listingTableSM tr:not(:first-child)").hide();

		$("#listingsDivSM div:first").addClass('startdiv');

		var $foo = $('.listingTableSM');
		for( var i = 0, n = $foo.length;  i < n;  ++i ) {
			var element = $foo[i];
			$(element).attr('id', 'table' + (i+1));
		}

		$('hr').mouseover(function() {
			$('#table1 tr:eq(0)').css('background-color','#EDEEF0');
			$('#table1 tr:eq(1)').show();
		});

		$('hr').mouseout(function() {
			$('#table1 tr:eq(1)').hide();
			$('#table1 tr:eq(0)').css('background-color','#FFFFFF');
		});

		$('#table1').mouseover(function() {
			$('#table1 tr:eq(0)').css('background-color','#EDEEF0');
			$('#table1 tr:eq(1)').show();
		});
		$('#table2').mouseover(function() {
			$('#table2 tr:eq(0)').css('background-color','#EDEEF0');
			$('#table2 tr:eq(1)').show();
		});
		$('#table3').mouseover(function() {
			$('#table3 tr:eq(0)').css('background-color','#EDEEF0');
			$('#table3 tr:eq(1)').show();
		});
		$('#table1').mouseout(function() {
			$('#table1 tr:eq(1)').hide();
			$('#table1 tr:eq(0)').css('background-color','#FFFFFF');
		});
		$('#table2').mouseout(function() {
			$('#table2 tr:eq(1)').hide();
			$('#table2 tr:eq(0)').css('background-color','#FFFFFF');
		});
		$('#table3').mouseout(function() {
			$('#table3 tr:eq(1)').hide();
			$('#table3 tr:eq(0)').css('background-color','#FFFFFF');
		});
	}


</script>
