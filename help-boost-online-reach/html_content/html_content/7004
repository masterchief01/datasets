<script type="text/javascript">
 var pic_id =0;
 var t_out;
 function getPic( pc_id ){
   pic_id = pc_id;
   clearTimeout(t_out);
   picshow( );
 }

 function picshow(  )
 {
   if(pic_id > 4) pic_id = 0;
   $$('#img-ul-li li').each(function(e){
     if('picli_'+pic_id == e.id){
       !e.hasClass("action") && e.addClass("action");
     }else{
       e.removeClass("action");
     }
   });
   showz( pic_id );
   t_out = setTimeout("picshow()",5000);
   pic_id++;
 }

 function showz( show_id )
 {
   //var showpics = Array("dl_0","dl_1","dl_2","dl_3","dl_4");
   for(var i=0,len=5;i<len;i++){
     $('dl_'+i).setStyle("display","none");
   }
   //mootools兼容性修改
   //$('dl_'+show_id).effect("opacity",{duration: 1000, transition: Fx.Transitions.linear}).start(0,1);
   $('dl_'+show_id).set('tween', {duration: '1000'});
   $('dl_'+show_id).set('opacity', 0);
   $('dl_'+show_id).fade('in');
   $('dl_'+show_id).setStyle("display","block");
 }

 window.addEvent("domready",function(){
   getPic(0);
 });
</script>

