<script type="text/javascript">

var len = $$("#editorChoice li").length ;
var right_time = 1;
var left_time = 1;
var scroll = new Fx.Scroll('myslide', {
	wait: false,
	duration: 1000,
	transition: Fx.Transitions.Quad.easeInOut
});

function toRight(){
	if(len - right_time >= 5 ){
	  left_time--;
	  scroll.start(right_time * 187,0);
	  right_time++;
	}	
}

function toLeft(){
	if(len - left_time >= 5 && left_time <= 0){
	right_time --;
	scroll.start(left_time * -187,0);	
	left_time ++;
}
}
</script>			<!--精选编辑end-->
