<script type="text/javascript" src="/js/bottom.js?_=187bbc758919ef82af803ed958e6c06aabcacdd9"></script><script type="text/javascript">GOOD.slideshow = function (selector, images) {
	var $slideshow = $(selector),
		$image = $slideshow.find('.image img'),
		originalSrc = $image.attr('src'),
		$next = $slideshow.find('.next'),
		$nextButton = $next.find('.button'),
		$prev = $slideshow.find('.prev'),
		$prevButton = $prev.find('.button'),
		$slideInfo = $slideshow.find('.slide-info'),
		$current = $slideInfo.find('.pages'),
		$original = $slideshow.find('.details .original a'),
		$caption = $slideInfo.find('.caption'),
		$credit = $slideInfo.find('.credit'),
		index = 0,
		total = images.length,
		distance = '500%',
		preloadImages = {},
		i;

	function getIndex(direction, i) {
		i = i || index;
		if (direction === 'next') {
			i = (images[++i]) ? i : 0 ;
		} else {
			i = (images[--i]) ? i : total - 1;
		}
		return i;
	}

	function pageRange(index) {
		return (index + 1) + '/' + total;
	}

	function slideImage(direction) {
		var operator,
			opposite,
			src;
		index = getIndex(direction);		
		src = images[index].src;
		if (!preloadImages[src]) {
			preloadImages[src] = document.createElement('img');
			preloadImages[src].setAttribute('src', src);
		}
		if (direction === 'next') {
			operator = '-';
			opposite = '+';
		} else {
			operator = '+';
			opposite = '-';			
		}		
		$image.animate(
			{
				left: operator + distance
			},
			function () {
				$image
					.attr('src', images[index].src)
					.addClass('hidden')
					.css({
						left: opposite + distance
					});
				$caption.html(images[index].caption);
				$credit.html(images[index].citation);
				$nextButton.text(pageRange(getIndex('next', index)));
				$current.text(pageRange(index));
				$prevButton.text(pageRange(getIndex('prev', index)));
				$original.attr('href', images[index].src);
			}
		);
	}

	function returnImage() {
		$image
			.removeClass('hidden')
			.animate({
				left: '-50%'
			}, GOOD.reloadAllAdsOnPage);
	}

	for (i = 0; i < images.length; i++) {
		if (images[i] === originalSrc) {
			index = i;
			break;
		}
	}

	preloadImages[$image[0].src] = $image[0];

	$image.load(returnImage);

	$next.click(function (e) {
		e.preventDefault();
		slideImage('next');
	});
	
	$prev.click(function (e) {
		e.preventDefault();
		slideImage('prev');
	});
};</script><script type="text/javascript">
