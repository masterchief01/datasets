      var links = document.getElementsByTagName('a');
      var query = '&';
      for(var i = 0; i < links.length; i++) {
        if(links[i].href.indexOf('#disqus_thread') >= 0) {
          links[i].innerHTML = 'View Comments';
          query += 'wpid' + i + '=' + encodeURIComponent(links[i].getAttribute('wpid')) + '&';
        }
      }
      document.write('<script charset="utf-8" type="text/javascript" src="http://venturebeat.disqus.com/get_num_replies_from_wpid.js?v=2.0' + query + '"><' + '/script>');

    })();
  </script>

