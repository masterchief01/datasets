<script>

  window.fbAsyncInit = function() {	
    FB.init({appId: 'a62ed09571374d5f32d17fa82d91e888', status: true, cookie: true,
             xfbml: true});

	jQuery(function($){
		$('.fb_share').each(function(){
			var anchor = $(this);
			var share_url = $(this).attr('share_url');
			var query = FB.Data.query('SELECT share_count FROM link_stat WHERE url="'+share_url+'"');
			query.wait(function(row) {
				var share_count = row[0].share_count;
				if( share_count > 0 ) {
					$('.fb_share_count_inner', anchor).html(share_count);
					$('span', anchor).removeClass('fb_share_no_count');
				}
			});
		}).click(function(){
			
			if( !$('.fb_share_count_inner', this).hasClass('clicked') ) {
				var count = $('.fb_share_count_inner', this).html();
				if( count === '' ) {
					count = 0;
				}
				
				count++;
				
				$('.fb_share_count_inner', this).html(count);
				$('.fb_share_count_inner', this).addClass('clicked');
				$('span', this).removeClass('fb_share_no_count');
			}
			window.open($(this).attr('href'),' sharer', 'toolbar=0, status=0, width=626, height=436');
			return false;
		});
	});
		
  };
