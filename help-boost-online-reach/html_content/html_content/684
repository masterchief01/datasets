// enlarge inline images
$.fn.afns_enlargeArticleImages = function(){
    $(".image", this).each(function(){
        var thumbnail = $(this);
        if (parseInt($("img", thumbnail).outerWidth()) < 249) {
            return true;
        }
        var enlarge_span = $("<a onclick=\"$(this).next().click(); return true;\" class=\"actionlabel\" href=\"#enlarge\"><span>Enlarge Image</span></a>");
        $(thumbnail).prepend(enlarge_span);
        $(thumbnail).css("cursor", "pointer");
        $(thumbnail).bind("click", enlarge_image);
        if (!$.browser.msie) {
            $(thumbnail).click();
        }
    });
    function enlarge_image(){
        $(this).css("cursor", "pointer");
        var large_url = $(this).attr("rel");
        $(this).click(function(){
            $("#image_holder img#expand_target").attr("src", large_url);
            $("#image_holder").show().css({"top": $(window).scrollTop(), "left": 0});
            $("#image_holder .caption").text($(".caption", this).text());
        });
    }
    $("#image_holder").click(function(){
        $("img#expand_target", this).attr("src", "");
        $(".caption", this).text("");
        $(this).hide();
        return false;
    });
    $(this).focus();
};
$(document).ready(function() {
    setTimeout('$(".article_body").afns_enlargeArticleImages()', 100);
    terminator(".article_body p:last", "http://o.onionstatic.com/", "sports-news-in-brief");
});
</script>
