<div id="marketingWidgetModule">
	<script language="javascript" src="/dwr/interface/NewsletterController.js"></script>
	<script type="text/javascript">
// ----------------------------------------------------
// Javascript functions for signing up newsletters
// ----------------------------------------------------
    function trackData(evnt) {
        s.linkTrackVars="events";
        s.linkTrackEvents=evnt;
        s.events=evnt;
        s.tl(this,'o','AjaxCall');
    }
    function showDefaultEmailText() {
	if((document.getElementById('newsletter_email')).value.replace(/^\s+|\s+$/g,"") === "enter your email address") {
	    document.getElementById('newsletter_email').value = '';
	    document.getElementById('newsletter_container').style.display = 'block';
	}
    }
    function hideDefaultEmailText() {
	if(document.getElementById('newsletter_email').value.replace(/^\s+|\s+$/g,"") === "") {
	    document.getElementById('newsletter_email').value = 'enter your email address';
	}
    }
    function validateNewsletters() {
	//reset all the error and succees messages
	document.getElementById('letter_message1').style.display = "none";
	document.getElementById('letter_message2').style.display = "none";
	document.getElementById('letter_message3').style.display = "none";
	
        var isChecked = false;
        var email = document.newslettersForm.email.value;
        for (var i = 0; i < document.newslettersForm.newsletter.length; i++) {
            if (document.newslettersForm.newsletter[i].checked) {
                isChecked = true;
            }
        }
        if (! isChecked && document.newslettersForm.email.value == "") {
            document.getElementById("letter_message3").style.display="block";
            document.getElementById("letter_message2").style.display="block";
        } else {
            if (! isChecked && document.newslettersForm.email.value != "") {
                document.getElementById("letter_message2").style.display="none";
                document.getElementById("letter_message3").style.display="block";
            }
        }
        return isChecked;
    }
    function showNewsletterError(message) {
        document.getElementById("letter_message2").style.display="block";
        document.getElementById("letter_message3").style.display="none";
    }
    function showNewsletterSuccess() {
        document.getElementById("letter_message1").style.display="block";
        document.getElementById("newsletter_content").style.display="none";
	document.getElementById("see_all").style.display="none";
        document.getElementById("letter_message2").style.display="none";
        document.getElementById("letter_message3").style.display="none";
	  if(document.newslettersForm.newsletter[0].checked){
             trackData('event11')
         }
    }
    function signUpNewsletters() {
        if (validateNewsletters()) {
            var user = getCookie('amg_user_info');
            var email = document.newslettersForm.email.value;
            var ids = new Array();
            var missedIds = new Array();
            for (var i = 0; i < document.newslettersForm.newsletter.length; i++) {
                if (document.newslettersForm.newsletter[i].checked) {
                    ids[ids.length] = document.newslettersForm.newsletter[i].value;
                } else{
                    missedIds[missedIds.length] = document.newslettersForm.newsletter[i].value;
                }
            }
            var form = {username: user,
                        email: email,
                        newsletterIds: ids,
                        missedNewsLetterIds: missedIds,
                        application: 'newsletter',
                        applicationId: 'NONE PROVIDED',
                        formName: 'shortForm'};
              NewsletterController.signUpNewsletters(form, signUpNewslettersCallback);
        }
    }
    function signUpNewslettersCallback(result) {
        if (result.indexOf('Error') != -1) {
            showNewsletterError(result);
        } else {
            if (isUserLoggedIn() || (result.indexOf('EmailTaken') != -1)) {
                showNewsletterSuccess();
            } else {
                var email = document.newslettersForm.email.value;
                var newslettersChecked;  
                for (var i = 0; i < document.newslettersForm.newsletter.length; i++) {
                    if (document.newslettersForm.newsletter[i].checked) {   
                        newslettersChecked += "&newsletter" + document.newslettersForm.newsletter[i].value + "=true";
                    }
                }
                newslettersChecked = newslettersChecked.replace("undefined", "");
                var returnto = escape(window.location.pathname + window.location.search);
                var params = '?postSignup=newsletter&appAlias=newsletter&email=' + email + newslettersChecked + '&returnto=' + returnto;
                window.location = '/user/registration' + params;
            }
        }
    }
    // ----------------------------------------------------
    // General functions for the newsletter widget
    // ----------------------------------------------------
    function isUserLoggedIn() {
        var userId = getCookie('amg_user_info');
        if (userId != null && userId.length > 0) {
            return true;
        }
        return false;
    }
	</script>
