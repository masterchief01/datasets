	.newsletter_signup .validationmessage, .newsletter_signup .cn_message:empty  { display: none; }

	#subscribeRect .top h4{
		padding: 0;
		margin: 0;
		position: relative;
		top: 10px;
		left: 10px;
		text-transform: uppercase;
		font-size: 18px;
		color: #FFF;
		opacity: 0.8;
	}

	#subscribeRect .top h4.followsite{ font-weight: bold; opacity: 1; }
	#subscribeRect .cn_message{ display:none; }

	/* stumbleupon link */
	.panel.stumbleupon a {
		display: block;
		width: 179px;
		height: 22px;
		background: url('http://ganja.gawkerassets.com/assets/base/img/subscribe/badge-stumbleupon.png?11042012') left top no-repeat;
		margin: 0 auto;
	}

	.panel.stumbleupon a span {
		display: none;
	}

 </style>
