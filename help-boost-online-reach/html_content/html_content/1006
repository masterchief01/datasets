<script type="text/javascript">

// applies a left align to images on all old blog entries
// based on the entry's id

jQuery(document).ready(function(){

    currentBlog = 0;

                            
    entries = jQuery(".weblog-entry").length;
    for(i = 0; i < entries; i++) {
        entryId = jQuery(".weblog-entry").eq(i).attr("id");
        entryId = parseInt(entryId.replace("post-",""));
        if (entryId < currentBlog) {
            jQuery(".weblog-entry:eq("+i+") div.entry img").css("float","left");
        }
    }
    
});

</script>
    
