<script type="text/javascript">
    var conv_ready = false;
    var conv = LF({
        domain: 'myvoicenation.fyre.co',
        site_id: '304530',
        article_id: 'Mzc2NDI4MTMtMQ==',
        conv_meta: {
            article_url: "http://www.villagevoice.com/slideshow/the-best-burgers-in-new-york-2012-edition-37642813/1/",
            tags: "nyv,slideshow,dining,nyv_slideshow,nyv_dining,slideshow_dining,nyv_slideshow_dining",
            title: "The Best Burgers in New York, 2012 Edition - New York - Slideshows",
            sig: "2f684c9d5f7d67afdc37d12b9832d815"
        }
    }).ready(function(){
        conv_ready = true;
        LF.CommentCount({
            replacer: function(element, count) {
                element.innerHTML = count;
            }
        });
        MVN.queue(function(){
            MVN.LF.login();
            LF.Dispatcher.addListener(MVN.LF.binds());
            MVN.LF.clean();
        });
    });
    
    MVN.queue(function(){
        /*
        ** LiveFyre Component
        */
        var LF_Component = function(controller){
            var me = this;
            me.MVN = controller;
            me.version = 'LiveFyre for MVN 1.0';
            me.autoInit = false;
        }
        LF_Component.prototype = {
            checked: false,
            queued: false,
            binds: function(){
                var me = this;
                return {
                    handle_auth_login: function(){
                        if(me.MVN.omni||false){
                            me.queued = false;
                            if(!me.MVN.user){
                                                                location.href = '/village/login/';
                                                            }
                        }else if(!me.queued){
                            me.MVN.queue(me.binds().handle_auth_login);
                            me.queued = true;
                        }
                    },
                    handle_auth_logout: function(){
                        if(me.MVN.omni||false){
                            me.queued = false;
                            if(me.MVN.user||VVM.getCookie('MVN[anon]')){
                                                                me.MVN.sso.logout(function(){
                                    if(window.VVM && VVM.setCookie){
                                        VVM.setCookie('MVN[anon]', false, -1);
                                        VVM.setCookie('MVN[sid]', false, -1);
                                    }
                                    window.location.reload(true);
                                });
                                                            }
                        }else if(!me.queued){
                            me.MVN.queue(me.binds().handle_auth_logout);
                            me.queued = true;
                        }
                    },
                    handle_comment_shown: function(){
                        me.clean();
                    }
                }
            },
            login: function(){
                var me = this;
                if(me.checked==false&&window.conv&&window.conv_ready&&me.MVN.omni&&me.MVN.sso&&(me.MVN.user||VVM.getCookie('MVN[anon]'))){
                    me.checked = true;
                    me.MVN.sso.getLfToken(function(o){
                        if(o&&o.status=='success'){
                            conv.login(o.token);
                            if(o.anon && o.anon == true){
                                me.clean();
                            }
                        }
                    });
                }
                return false;
            },
            clean: function(){
                $('#livefyre .lf_comment_container').not('.lf_deleted').each(function(){
                    var usr = $('.lf_comment_user', this).attr('jid');
                    if(typeof usr == 'string' && usr.substr(0,5) == 'anon_'){
                        $('.hastooltip', this).removeClass('hastooltip');
                        $('a.lf_comment_user_nick', this).replaceWith(
                            $('<span style="font-weight:bold" title="Anonymous User"/>').text($('a.lf_comment_user_nick', this).text())
                        );
                        $('img.lf_main_avatar', this).css('cursor', 'default');
                        $('a.lf_user', this).replaceWith('<div class="lf_user" title="Anonymous User">'+$('a.lf_user', this).html()+'</div>');
                    }
                });
            }
        }
        MVN.load({
            'LF':{
                component: LF_Component,
                params: {}
            }
        });
    });
</script>
