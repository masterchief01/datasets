        $("a.comments-login").css("display", "none");
    }

    if (id != null && zmu != null) {

        disqus_remote_auth_s2 = getCommentCookie("pcdishash");

        username = getCommentCookie("pcusr");
        avatar = getCommentCookie("pcavtr");
        email = "";

        deleteCookie("pcid");

        loggedIn = true;
    }
    else {

        disqus_remote_auth_s2 = getCommentCookie("pcdishash");

        var dqras2 = 1;
    }

    if (!sso_enabled)
        disqus_remote_auth_s2 = '';
  
