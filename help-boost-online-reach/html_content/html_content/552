		var google_client_id = 'pub-9673688324827560';

		function submitSearch() {

			if (document.headerSearchForm.q.value == '') {
				alert("You must enter a search term.");
				document.headerSearchForm.q.focus();
				return false;
			}

			var rads = document.headerSearchForm.choices;

			for (var i = 0; i < rads.length; i++) {

				if (rads[i].checked == true) {

					if (rads[i].value == 'archive') {
						document.headerSearchForm.action='http://pqasb.pqarchiver.com/sptimes/results.html';
						document.headerSearchForm.hidden01.value='articles';
						document.headerSearchForm.text.name='QryTxt';
						document.headerSearchForm.method='get';
					} else if (rads[i].value == 'web') {
						document.headerSearchForm.action='http://www.google.com/custom?';
						document.headerSearchForm.hidden01.name="client";
						document.headerSearchForm.hidden01.value="pub-9673688324827560";
						document.headerSearchForm.hidden02.name="forid";
						document.headerSearchForm.hidden02.value="1";
