<script type="text/javascript">

tpc_email_processing = false;

function tpc_e_captcha_token() {
	var chars = "0123456789ABCDEFGHIJKLMNOPQRSTUVWXTZabcdefghiklmnopqrstuvwxyz";
	var string_length = 32;
	var randomstring = '';
	for (var i=0; i<string_length; i++) {
		var rnum = Math.floor(Math.random() * chars.length);
		randomstring += chars.substring(rnum,rnum+1);
	}
	return randomstring;
}

function tpc_e_captcha_img() {
	$('#email-captcha').html("Loading Validation Image...");
	var _newCaptchaImg = $('<img/>').attr('src','/captchaImage.do?token=' + tpc_e_captcha_token()).attr('border','0').attr('alt','Captcha');
	$('#email-captcha').html('').append(_newCaptchaImg);
	$('#tpc-e-code').val('');
}

function tpc_e_init() {
	tpc_e_captcha_img();
	$('#tpc-e-to').val('');
	$('#tpc-e-msg').val('');
	$('#tpc-e-from-name').val('');
	$('#tpc-e-from-email').val('');
	$('#tpc-e-code').val('');
	$('#tpc-e-close').bind('click', function() {
		$.modal.close();
	});	
	$('#email-captcha-refresh').find('a').each(function() { $(this).show(); });
	tpc_e_processing = false;
}


/*
 * 
 */
function tpc_e_parse() {
	var _ef = [];
	
	_ef.to  = $('#tpc-e-to').val();
	_ef.msg = $('#tpc-e-msg').val();
	_ef.fn  = $('#tpc-e-from-name').val();
	_ef.fe  = $('#tpc-e-from-email').val();
	_ef.vc  = $('#tpc-e-code').val();
	_ef.aid = $('#tpc-e-aid').val();
	_ef.cc  = ($('#tpc-e-cc').is(':checked')) ? "true" : "false";
	
	var _queryString = "?";
	
	for (var i in _ef) {
		_queryString += i + "=" + escape(_ef[i]) + "&";
	}

	_ef.qs = _queryString;
	
	return _ef;
}

function tpc_e_show_result(data) {
	$('#email-article-processing').hide();
	$('#email-article-body').hide();
	$('#email-article-errors').hide();
	tpc_e_processing = false;

    $('#email-article-msg').html('');

    if (data.messages.length > 0) {
       	var _image = $('<img/>').attr('src','/universal/images/success-24.png').css('vertical-align','middle').attr('border',0);

        $('#email-article-msg').append(
            _image
        ).append(
            $('<span/>').html((data.messages.length == 1) ? " " + data.messages[0] : " Success")
        ).append(
            $('<br />')
        );

        if (data.messages.length > 1) {

            var msgList = $('<ul/>').css('margin-left', '15px');
            for (var i in data.messages) {
                $('<li/>').html(data.messages[i]).appendTo(msgList);
            }
            $('#email-article-msg').append(msgList);
        }
    }

    if (data.errors.length > 0) {

        var _warningImage = $('<img/>').attr('src','/universal/images/warning-24.png').css('vertical-align','middle').attr('border',0);

        $('#email-article-msg').append(
            _warningImage
        ).append(
            $('<span/>').html(' There ' + ((data.errors.length == 1) ? 'is 1 error' : 'are ' + data.errors.length + ' errors'))
        ).append(
            $('<br />')
        );

        var errorList = $('<ul/>').css('margin-left', '15px');
        for (var i in data.errors) {
            $('<li/>').html(data.errors[i]).appendTo(errorList);
        }
        $('#email-article-msg').append(errorList);

        $('#email-article-errors-try-again').bind('click', function() {
            tpc_e_captcha_img();
            $('#email-article-errors-try-again').hide();
            $('#email-article-messages').hide();
            $('#email-article-body').show();
        }).show();
    }


    $('#email-article-success-close').bind('click', function() {
        $.modal.close();
    }).show();

    $('#email-article-msg').show();
    $('#email-article-messages').show();
}

$('#tpc-e-send').bind('click', function() {

	var ef = tpc_e_parse();
	
	$('#email-article-body').hide();
	
	$('#email-article-processing-msg').html('Sending your email. Please be patient.');
	$('#email-article-processing').show();

	var _url = '/site/email' + ef.qs;

	tpc_e_processing = true;
	setTimeout('tpc_e_handle_timeout', 30000);
	
	$.getJSON(_url, function (json) {
		$('#email-article-processing-msg').html('Response received...');

        tpc_e_show_result(json);
	});
	
});

function tpc_e_handle_timeout() {
	if (tpc_e_processing) {
		var errors = [];
		errors = "The request to the server has timed out. Please try again later";
		tpc_e_show_errors(errors);
	}
}
</script>

			
		
