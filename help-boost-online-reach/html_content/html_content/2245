<script>
var date = new Date("October 13, 2012");
var now = new Date();
var diff = date.getTime() - now.getTime();
var days = Math.floor(diff / (1000 * 60 * 60 * 24));
document.write("<b>")
if (days > 1) {
document.write(days+1 + "<br />" + "Days");
}
else if (days == 1) {
document.write("2" + "<br />" + "Days" );
}
else if (days == 0) {
document.write("1" + "<br />" + "Day!");
}
else {
document.write("SUIT" + "<br />" + "UP");
}
document.write("</b>");
</script>
